<resources>

    <!--  主题  -->
    <style name="AppTheme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- 设置状态栏颜色： -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="android:actionBarStyle">@color/green</item>

        <!--   选择器颜色     -->
        <item name="colorControlNormal">@color/gray_small</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--  登陆页  -->
    <style name="login_content">
        <item name="android:layout_margin">50dp</item>
        <item name="android:background">@drawable/bg_login_content</item>
    </style>
    <!--  登录页输入框  -->
    <style name="login_edit_text">
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColorHint">@color/gray_small</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>
</resources>